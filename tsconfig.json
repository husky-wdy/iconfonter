{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": false,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "outDir": "./lib",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "scripts",
    "src",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
